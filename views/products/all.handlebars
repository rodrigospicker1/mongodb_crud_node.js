<style>
    @import url('https://fonts.googleapis.com/css2?family=Righteous&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap');


h1{
  font-family: 'Righteous', sans-serif;
  color: rgba(0, 0, 0, 0.98);
  text-transform: uppercase;
  font-size: 2.4rem;
  text-align: center;
}

p {
  color:#484848;
  font-family: 'Lato', sans-serif;
  text-align: center;
  font-size: 0.8rem;
  line-height: 150%;
  letter-spacing: 2px;
  text-transform: uppercase;
}

</style>

<div class="container" style="display: flex;">
    {{#each products}}
        <div class="card" style="width:20%;height:50vh;margin:10px;padding:5px">
            <div class="image" style="width: 100%;height:50%;box-shadow:0px 0px 20px 0px rgba(94,94,94,1);border-radius: 5px;padding: 10px;">
                <img src="{{this.image}}" alt="{{this.name}}" style="width: 100%;height:100%">
            </div>
            <h1>{{this.name}}</h1>
            <p>R${{this.price}}</p>
        </div>
    {{/each}}
</div>

